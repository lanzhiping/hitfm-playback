{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "hitfm",
  "author": "lannano@qq.com",
  "description": "hitfm playback, a chrome extension",
  "homepage_url": "https://github.com/hitfm-playback",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeContent"
  ],
  "background": {
    "service_worker": "background/index.js"
  },
  "options_page": "options/index.html",
  "action": {
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
      "48": "icons/icon_48.png"
    },
    "default_title": "hitfm",
    "default_popup": "popup/index.html"
  }
}